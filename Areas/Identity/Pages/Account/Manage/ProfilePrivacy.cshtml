            <span asp-validation-for="ProfilePrivacyModel.UserId" class="text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="ProfilePrivacyModel.EmailPrivacy" class="control-label"></label>
            <select asp-for="ProfilePrivacyModel.EmailPrivacy" class="form-control">
               <option value="@Stories.Tools.Settings.AccessRights.Public">Public</option>
               <option value="@Stories.Tools.Settings.AccessRights.Registered">Registered users</option>
               <option value="@Stories.Tools.Settings.AccessRights.Friends">Friends</option>
               <option value="@Stories.Tools.Settings.AccessRights.Private">Private</option>
            </select>
            <span asp-validation-for="ProfilePrivacyModel.EmailPrivacy" class="text-danger"></span>
