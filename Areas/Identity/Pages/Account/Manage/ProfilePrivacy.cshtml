@page
@model Stories.Areas.Identity.Pages.Account.Manage.ProfilePrivacy
@{
}
@{
   ViewData["Title"] = "Profile Privacy";
   ViewData["ActivePage"] = ManageNavPages.ProfilePrivacy;
}

<h3>Profile Privacy</h3>
<hr />
<form method="post">
   <div class="row">
      <div class="col-md-6 bordered-right">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <input type="hidden" asp-for="ProfilePrivacyModel.Id" value="@Model.ProfilePrivacyModel.Id" />
