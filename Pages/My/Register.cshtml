   dataForLeft += "<hr>";
   dataForLeft += "Warmly welcome at the # ##";
   dataForLeft += "STORIES<br><br>#success##";
   dataForLeft += "Here you can realize your dreams of writing.<br><br>No matter if you want to write famous novel, or just# ##";
   dataForLeft += "share old local legend# ##";
   dataForLeft += "Stories#success##";
   dataForLeft += "is here for you!<br><br># ##";

   dataForLeft += "JUST REGISTER AND ENJOY!#error text-bold text-centered##";
   typeWrite(dataForLeft, "left", true, 100);

   $(function () {
      $("#Input_BirthDate").datepicker({
         todayBtn: "linked",
         autoclose: true,
         todayHighlight: true,
         dateFormat: 'dd/mm/yy',
         changeMonth: true,
         changeYear: true,
         yearRange: "1920:2018"
      });
   });
